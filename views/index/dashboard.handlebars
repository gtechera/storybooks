<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td>
        <a href="/stories/show/{{id}}">{{title}}</a>
      </td>
      <td>{{formatDate date 'LL'}}</td>
      <td>
        <span class="dash-status">{{status}}</span>
      </td>
      <td>
        <a href="/stories/edit/{{id}}" class="btn left-align">
          <i class="fas fa-edit"></i> Edit
        </a>
        <form action="/stories/{{id}}?_method=DELETE" id="delete-form" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn red" type="submit">
            <i class="fas fa-trash-alt"></i> Delete
          </button>

        </form>
      </td>

    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>You have not created any stories yet</p>
{{/if}}